<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Population Application</display-name>

    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:postgresql://localhost:5432/population_db</param-value>
    </context-param>

    <context-param>
        <param-name>dbUser</param-name>
        <param-value>user</param-value>
    </context-param>

    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>password</param-value>
    </context-param>

    <context-param>
        <param-name>maxRegions</param-name>
        <param-value>99</param-value>
    </context-param>

    <context-param>
        <param-name>threadPoolSize</param-name>
        <param-value>50</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>PopulationServlet</servlet-name>
        <servlet-class>servlet.PopulationServlet</servlet-class>
        <async-supported>true</async-supported>
    </servlet>

    <servlet-mapping>
        <servlet-name>PopulationServlet</servlet-name>
        <url-pattern>/api/population</url-pattern>
    </servlet-mapping>

</web-app>